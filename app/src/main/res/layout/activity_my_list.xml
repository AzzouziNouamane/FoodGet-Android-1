<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimaryDark"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context=".activities.MyListActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="400dp"
            android:layout_height="189dp"
            app:srcCompat="@drawable/foodget" />

        <LinearLayout
            style="@style/linearStyle"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameShoppingView"
                style="@style/textView_Style" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/shopping_list"
                android:layout_width="0dp"
                android:layout_height="199dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:orientation="vertical">

            <Button
                android:id="@+id/addShoppingData"
                style="@style/buttonStyle"
                android:layout_width="389dp"
                android:text="@string/addShoppingProduct" />

            <Button
                android:id="@+id/shareSoppingData"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:text="Share via Bluetooth" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>


</android.support.constraint.ConstraintLayout>