<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:layout_marginBottom="@dimen/fab_margin"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        app:srcCompat="@drawable/foodget_register" />

    <LinearLayout
        style="@style/linearStyle"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical"
        android:padding="@dimen/fab_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/viewList"
                style="@style/buttonStyle"
                android:layout_width="57dp"
                android:layout_height="58dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_control_point_black_24dp"
                android:paddingLeft="@dimen/fab_padding" />

            <TextView
                android:id="@+id/viewList2"
                android:layout_width="333dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="    Consulter une liste"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createNewList"
                style="@style/buttonStyle"
                android:layout_width="57dp"
                android:layout_height="58dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_control_point_black_24dp"
                android:paddingLeft="@dimen/fab_padding" />

            <TextView
                android:id="@+id/createNewList2"
                android:layout_width="333dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="    CrÃ©er une liste"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteList"
                style="@style/buttonStyle"
                android:layout_width="57dp"
                android:layout_height="58dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_control_point_black_24dp"
                android:paddingLeft="@dimen/fab_padding" />

            <TextView
                android:id="@+id/deleteList2"
                android:layout_width="333dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="    Supprimer une liste"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/accueilButton"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Accueil" />
    </LinearLayout>

</LinearLayout>

