<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="400dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/foodget" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/shopping_cart"
                    android:text="Panier" />

                <Button
                    android:id="@+id/btn_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/statistics"
                    android:text="STATS" />

            </LinearLayout>

            <LinearLayout
                style="@style/linearStyle"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/welcomeView"
                    style="@style/textView_Style" />


            </LinearLayout>

            <LinearLayout
                style="@style/linearStyle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/textView_Style"
                    android:text="Historique de vos dÃ©penses :" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/food_list"
                    android:layout_width="0dp"
                    android:layout_height="199dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/add_data"
                    style="@style/buttonStyle"
                    android:layout_width="210dp"
                    android:text="@string/addSpentMoney" />


                <Button
                    android:id="@+id/set_threshold"
                    android:layout_width="match_parent"
                    style="@style/buttonStyle"
                    android:layout_height="match_parent"
                    android:text="@string/setThreshold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>